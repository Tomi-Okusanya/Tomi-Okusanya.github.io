{"$schema":"https://vega.github.io/schema/vega-lite/v5.json",
  
    "description": "Police Crime chart",

    "title": {
     "text": "Stop and Searches by Location",
     "anchor": "start",
     "color": "black",
     "subtitle":"Stops and Searches from 2021. Source: Police API.",
     "subtitleFontStyle":"italic",
     "subtitleFontSize":10,
     "subtitleColor":"black"
    },

    "data": {"url": "https://data.police.uk/api/stops-street?lat=51.542757&lng=0.004450"},
    "transform": [
      {"calculate":"1", "as":"search"}
    ],
    

  "mark":"bar",
    "encoding":{
      "x":{"field":"gender","type":"nominal","axis":{"labelAngle":20}},
    
    "y":{"field":"search","type":"quantitative"},"scale":{"domain":[0,100]}}
    }
