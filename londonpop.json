{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "description": "Bank Rate",

   "title": {
    "text": "Bank Rate",
    "subtitle":"Bank of England's main policy rate (%). Source: BoE",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },
  
  "data": {
    "url": "https://raw.githubusercontent.com/Tomi-Okusanya/Tomi-Okusanya.github.io/main/londonlongpopdata.csv"},
  "height": 300,
  "width": 300,
  "mark": {
    "type": "line",
    "point": false,
    "interpolate": "step",
    "color": "blueviolet"
  },

  "encoding": {"x": {"field": "Year", "type": "temporal", "title":null}},
 
  "layer": [
    {"encoding": {
        "y": {"field": "Population", 
              "type": "quantitative", 
              "title":null, "scale":{"domain":[5000000,11000000]}}},
        
        "layer": [
          {"mark":{
            "type": "line",
            "align": false,
            "interpolate": "step",
            "color": "red"}},
          {"transform": 
            [{"filter": {"selection": "hover"}}], 
               "mark": {
                 "type":"circle",
                 "size":150,
                 "color":"red"}}
      ]
    },
    
    {"mark": "rule", 
      "encoding": {
         "opacity": {
           "condition": {"value": 0, "selection": "hover"},
           "value": 0
             },
          "tooltip": [
          {"field": "Year", "type": "temporal", "format": "%Y", "title":"Year"},  
          {"field": "Population", "type": "quantitative", "format": ",.0f", "title":"Population"}
            ]
           },
      "selection": {
        "hover": {
          "type": "single",
          "fields": ["Date"],
          "nearest": true,
          "on": "mouseover",
          "empty": "none",
          "clear": "mouseout"
        }
      }
    }
  ]
}
