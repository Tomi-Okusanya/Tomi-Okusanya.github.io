{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
    "text": "London Population",
    "subtitle":"London Population over Time with Projections",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"},

  
  "data": {
    "url": "https://raw.githubusercontent.com/Tomi-Okusanya/Tomi-Okusanya.github.io/main/London-population-2022-01-14.csv",
    "format": {"type": "csv"}
  },
 
  "height": 300,
  "width": 300,
 
  "mark": {"type": "line", "point": false,"strokeWidth":1,"width":1,"color":"blueviolet"} ,

    "transform": [
      {"filter": "datum.year>minYear"},
      {"filter": "datum.year<maxYear"}
    ],

    "params": [    
      {"name":"minYear", "value":1800,
         "bind":{
           "input": "range",
           "min": 1800, 
           "max": 2021, 
           "step": 1,
           "name": "Start year:"}
      },

      {"name":"maxYear", "value":2021,
         "bind":{
           "input": "range",
           "min": 1800, 
           "max": 2021, 
           "step": 1,
           "name": "End year:"}
      }
    ],

  
  "encoding": {
    
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
      },
 
    "y": {
      "field": "Population",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false},
      "scale":{"domain":[7000000,11000000]}}

  
   }}

